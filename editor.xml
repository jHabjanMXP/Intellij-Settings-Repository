<application>
  <component name="TodoConfiguration">
    <multiLine>false</multiLine>
    <pattern pattern="\b(todo|fixme)\b.*" />
    <pattern icon="question" useCustomColors="true" pattern="\b(check)\b.*">
      <option name="FOREGROUND" value="6fc05d" />
      <option name="FONT_TYPE" value="2" />
      <option name="ERROR_STRIPE_COLOR" value="977ab" />
    </pattern>
    <pattern icon="important" useCustomColors="true" pattern="\b(todo-emergency)\b.*">
      <option name="FOREGROUND" value="c00025" />
      <option name="FONT_TYPE" value="2" />
      <option name="ERROR_STRIPE_COLOR" value="977ab" />
    </pattern>
    <filter name="Todos">
      <pattern index="0" />
    </filter>
    <filter name="Checks">
      <pattern index="1" />
    </filter>
    <filter name="Todo emergency">
      <pattern index="2" />
    </filter>
  </component>
</application>